{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"removeComments": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": false,
		"sourceMap": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
